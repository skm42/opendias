#!/bin/sh
# postinst script for opendias
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package




case "$1" in
    configure)
	test -d /var/run/opendias || mkdir /var/run/opendias || exit 1
	chown opendias:opendias /var/lib/opendias /var/run/opendias /var/log/opendias || exit 1


	#generated by dh_installudev
	if [ -e "/etc/udev/rules.d/z60_opendias.rules" ]; then
		echo "Preserving user changes to /etc/udev/rules.d/40-opendias.rules ..."
		if [ -e "/etc/udev/rules.d/40-opendias.rules" ]; then
			mv -f "/etc/udev/rules.d/40-opendias.rules" "/etc/udev/rules.d/40-opendias.rules.dpkg-new"
		fi
		mv -f "/etc/udev/rules.d/z60_opendias.rules" "/etc/udev/rules.d/40-opendias.rules"
	fi
	# End automatically added section
	# Automatically added by dh_installinit
	if [ -x "/etc/init.d/openDIAS" ]; then
		if [ ! -e "/etc/init/openDIAS.conf" ]; then
			update-rc.d openDIAS defaults >/dev/null
		fi
		invoke-rc.d openDIAS start || exit $?
	fi
	# End automatically added section
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
